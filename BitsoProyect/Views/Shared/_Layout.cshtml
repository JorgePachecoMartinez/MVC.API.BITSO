<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/BitsoProyect.js"></script>


</head>
<body>
    <header class="container-fluid fixed-top px-0">
        <nav id="navbar-menu" class="navbar navbar-expand-lg navbar-light bg-light">

            
            <div id="navbar-content" class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">INICIO</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Mercado")">MERCADO</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", new { SelectedOperation = "OrderBookCompra" })">POSTURAS DE COMPRA</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", new { SelectedOperation = "OrderBookVenta" })">POSTURAS DE VENTA</a>
                    </li>

                </ul>

            </div>
        </nav>
    </header>

    <div class="container body-content">
        @RenderBody()
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>


<script>
    $(document).ready(function update() {

        //Call EmpDetails jsonResult Method
        $.getJSON("/@this.ViewData["SelectedOption"]/OrderBook",
        function (data) {
            if (data != null) {
                $("#TradesList").empty();
                var json = JSON.parse(data);

                for (var i = 0; i < json.payload.asks.length; i++) {
                    tr = $('<tr/>');
                    tr.append("<td> $" + CommaFormatted(json.payload.asks[i].price) + "</td>");
                    tr.append("<td>" + json.payload.asks[i].amount + "</td>");
                    $('table').append(tr);
                }
            }
            setInterval(update, 50000);
            update();
        });


    });


</script>
<h1 class="p-2">Posturas de venta</h1>
<table class="p-5 table table-bordered table-condensed table-hover table-striped">

    <thead>
        <tr>
            <th>Precio MXN</th>
            <th>Monto @this.ViewData["SelectedOption"]</th>
        </tr>
    </thead>
    <tbody id="TradesList"></tbody>

</table>